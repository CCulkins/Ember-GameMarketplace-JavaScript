{{#if addNewReview}}
  <h1>Review Game</h1>
  <div>
    <form>
      <div class="form-group">
        <label for="rating">Rating:</label>
        {{input type="number" value=rating id="rating"}}
      </div>

      <div class="form-group">
        <label for="message">Review</label>
        {{input value=message id="message"}}
      </div>
      <button {{action 'saveReview'}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'reviewFormShow'}}>Add a Review</button>
{{/if}}
